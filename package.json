{
  "name": "jsxr-poc",
  "version": "0.1",
  "scripts": {
    "dev:twd": "bun x tailwindcss --watch --input src/client/index.css --output _dev/static/index.css",
    "dev:src": "bun --hot run --inspect src/index.tsx",
    "dev": "concurrently \"bun dev:twd\" \"bun dev:src\"",
    "clean": "rm -rf dist && rm -rf _dev",
    "test": "bun test",
    "check": "tsc --noEmit",
    "bundle:app": "NODE_ENV=production bun build src/index.tsx --outfile ./dist/app.mjs --target node",
    "bundle:css": "bun x tailwindcss --minify --input src/client/index.css --output dist/static/index.css",
    "dist": "bun clean && bun check && bun test && bun bundle:app && cp -R src/static dist && bun bundle:css",
    "preview": "bun dist && cd dist && node app.mjs",
    "demo": "cd dist && NODE_ENV=production NODE_HOST=0.0.0.0 NODE_PORT=3333 node app.mjs"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0-beta.2",
    "@types/bun": "^1.1.12",
    "concurrently": "^9.1.0",
    "tailwindcss": "^4.0.0-beta.2"
  }
}
